@model IEnumerable<AppointmentSystem.Models.Appointment>

@{
    ViewData["Title"] = "Randevu Yönetimi";
}

<div class="container mt-4">
    <h2>Randevu Yönetimi</h2>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(model => model.CustomerName)</th>
                    <th>@Html.DisplayNameFor(model => model.PhoneNumber)</th>
                    <th>@Html.DisplayNameFor(model => model.Region)</th>
                    <th>@Html.DisplayNameFor(model => model.EmployeeName)</th>
                    <th>@Html.DisplayNameFor(model => model.AppointmentDate)</th>
                    <th>@Html.DisplayNameFor(model => model.ServiceType)</th>
                    <th>@Html.DisplayNameFor(model => model.Status)</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CustomerName</td>
                        <td>@item.PhoneNumber</td>
                        <td>@item.Region</td>
                        <td>@item.EmployeeName</td>
                        <td>@item.AppointmentDate.ToString("dd/MM/yyyy HH:mm")</td>
                        <td>@item.ServiceType</td>
                        <td>@item.Status</td>
                        <td>
                            <div class="btn-group">
                                <a asp-action="EditAppointment" asp-route-id="@item.Id" class="btn btn-primary btn-sm">
                                    <i class="fas fa-edit"></i> Düzenle
                                </a>
                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm">
                                    <i class="fas fa-info-circle"></i> Detaylar
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div> 